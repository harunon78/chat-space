.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__username
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__icon__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-header__box__icon__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

    